function VisxWordCloud({ width, height }) {
  const [words, setWords] = useState([]);


  // Mock Data
  const wordsData = [
    { text: 'Man', value: 100, binaryGender: 1 },
    { text: 'Woman', value: 80, binaryGender: 0 },
    // ... Add more words here
  ];
  
  const colorScale = scaleOrdinal(schemeCategory10);
  
    return (
        // <svg width={300} height={300}>
        <Wordcloud 
        
        words={wordsData}
        width={300}
        height={300}
        random={Math.random}
        fontSize={({ datum }) => datum.value}
        rotate={0}
        color={({ datum }) =>
        colorScale(datum.binaryGender === 1 ? 'male' : 'female')
        }
        />
        // </svg>
    );
}
 

export default VisxWordCloud;
